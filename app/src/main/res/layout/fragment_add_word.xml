<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.admin.add.AddWordFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/addwordText"
                android:layout_width="284dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/MainLight"
                android:ems="10"
                android:gravity="center"
                android:hint="Word"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="@color/MainDark"
                android:textColorHint="@color/Main"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.0" />

            <Spinner
                android:id="@+id/addwordDifficulty"
                android:layout_width="284dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/MainLight"
                android:foregroundGravity="center"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addwordLanguage" />

            <ImageButton
                android:id="@+id/addwordImage"
                android:layout_width="284dp"
                android:layout_height="284dp"
                android:layout_marginTop="20dp"
                android:background="@color/MainLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addwordText"
                app:srcCompat="@android:drawable/ic_menu_report_image"
                tools:src="@tools:sample/avatars" />

            <Button
                android:id="@+id/addwordAddBtn"
                android:layout_width="211dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:src="@drawable/rectangle_light"
                android:text="Add"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addwordTranslationListContainer"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="265dp"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Translation"
                android:textColor="@color/MainDark"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addwordDifficulty" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="265dp"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Word"
                android:textColor="@color/MainDark"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/addwordLanguage"
                android:layout_width="284dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/MainLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addwordImage" />

            <ImageButton
                android:id="@+id/addwordTranslationBtn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/ic_input_add"
                android:backgroundTint="@color/MainDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/addwordTranslationListContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addwordTranslationBtn">

                <ListView
                    android:id="@+id/addwordTranslationList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true" />
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</ScrollView>