<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartMenuActivity"
    android:background="@color/Main">

    <Button
        android:id="@+id/starter_logout_btn"
        android:layout_width="171dp"
        android:layout_height="58dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starter_play_btn"
        app:layout_constraintVertical_bias="0.84000003" />

    <Button
        android:id="@+id/starter_play_btn"
        android:layout_width="234dp"
        android:layout_height="85dp"
        android:layout_marginTop="51dp"
        android:text="Play"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starter_dictionary_btn" />

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="291dp"
        android:layout_height="122dp"
        android:src="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/titleName"
        android:layout_width="145dp"
        android:layout_height="74dp"
        android:gravity="center"
        android:text="Menu"
        android:textColor="@color/MainLight"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        app:layout_constraintEnd_toEndOf="@+id/rectangle"
        app:layout_constraintStart_toStartOf="@+id/rectangle"
        app:layout_constraintTop_toTopOf="@+id/rectangle"
        app:layout_constraintVertical_bias="0.502" />

    <Button
        android:id="@+id/starter_dictionary_btn"
        android:layout_width="234dp"
        android:layout_height="85dp"
        android:layout_marginTop="100dp"
        android:text="Dictionary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle" />

</androidx.constraintlayout.widget.ConstraintLayout>