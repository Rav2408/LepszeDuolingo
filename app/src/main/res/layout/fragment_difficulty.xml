<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.difficulty.DifficultyFragment"
    android:background="@color/Main">

    <ImageView
        android:id="@+id/challangeWrapper"
        android:layout_width="411dp"
        android:layout_height="106dp"
        android:src="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chalanngeButton"
        android:layout_width="253dp"
        android:layout_height="64dp"
        android:background="@color/MainLight"
        android:text="Challange Mode"
        android:textColor="#78909C"
        android:textSize="24sp"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="@+id/challangeWrapper"
        app:layout_constraintEnd_toEndOf="@+id/challangeWrapper"
        app:layout_constraintStart_toStartOf="@+id/challangeWrapper"
        app:layout_constraintTop_toTopOf="@+id/challangeWrapper" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diffRecyclerView"
        android:layout_width="409dp"
        android:layout_height="623dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challangeWrapper" />


</androidx.constraintlayout.widget.ConstraintLayout>