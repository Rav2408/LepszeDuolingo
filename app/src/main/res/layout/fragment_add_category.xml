<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.add.AddCategoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/addcategoryText"
            android:layout_width="284dp"
            android:layout_height="60dp"
            android:layout_marginTop="92dp"
            android:background="@color/MainLight"
            android:ems="10"
            android:gravity="center"
            android:hint="Category"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/MainDark"
            android:textColorHint="@color/Main"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/addcategoryAddBtn"
            android:layout_width="211dp"
            android:layout_height="70dp"
            android:layout_marginBottom="164dp"
            android:gravity="center"
            android:src="@drawable/rectangle_light"
            android:text="Add"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="265dp"
            android:layout_height="58dp"
            android:layout_marginTop="152dp"
            android:gravity="center"
            android:text="Category"
            android:textColor="@color/MainDark"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/addcategoryDifficulty"
            android:layout_width="284dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:background="@color/MainLight"
            android:foregroundGravity="center"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addcategoryText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
