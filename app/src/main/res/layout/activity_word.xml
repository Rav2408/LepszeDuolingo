<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.word.WordActivity"
    android:background="@color/Main">

    <TextView
        android:id="@+id/word_translation"
        android:layout_width="348dp"
        android:layout_height="103dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_center_wrapper" />

    <ImageView
        android:id="@+id/word_center_wrapper"
        android:layout_width="410dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_light" />

    <TextView
        android:id="@+id/word_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Means"
        android:textColor="@color/MainDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/word_center_wrapper"
        app:layout_constraintEnd_toEndOf="@+id/word_center_wrapper"
        app:layout_constraintStart_toStartOf="@+id/word_center_wrapper"
        app:layout_constraintTop_toTopOf="@+id/word_center_wrapper" />

    <TextView
        android:id="@+id/word_text"
        android:layout_width="348dp"
        android:layout_height="103dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/word_center_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>